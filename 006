#include <iostream>
#include <string>

using namespace std;

struct Estudiante {
    string nombre;
    double notas[3];
};

int main() {
    Estudiante juan, alejandro, mia;

    juan.nombre = "Juan";
    juan.notas[0] = 85.5;
    juan.notas[1] = 90.0;
    juan.notas[2] = 78.8;

    alejandro.nombre = "Alejandro";
    alejandro.notas[0] = 92.0;
    alejandro.notas[1] = 88.5;
    alejandro.notas[2] = 95.2;

    mia.nombre = "Mia";
    mia.notas[0] = 78.3;
    mia.notas[1] = 82.6;
    mia.notas[2] = 87.9;

    Estudiante *pJuan = &juan;
    Estudiante *pAlejandro = &alejandro;
    Estudiante *pMia = &mia;

    cout << "Notas de los estudiantes:" << endl;

    // Mostrar notas de Juan
    cout << pJuan->nombre << ": ";
    for (int i = 0; i < 3; ++i) {
        cout << pJuan->notas[i] << " ";
    }
    cout << endl;

    // Mostrar notas de Alejandro
    cout << pAlejandro->nombre << ": ";
    for (int i = 0; i < 3; ++i) {
        cout << pAlejandro->notas[i] << " ";
    }
    cout << endl;

    // Mostrar notas de Mia
    cout << pMia->nombre << ": ";
    for (int i = 0; i < 3; ++i) {
        cout << pMia->notas[i] << " ";
    }
    cout << endl;

    return 0;
}

