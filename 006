#include <iostream>
#include <string>

using namespace std;

struct Estudiante {
    string nombre;
    int notas[3];
};

int main() {
    Estudiante juan, alejandro, mia;

    juan.nombre = "Juan";
    juan.notas[0] = 45;
    juan.notas[1] = 35;
    juan.notas[2] = 50;

    alejandro.nombre = "Alejandro";
    alejandro.notas[0] = 35;
    alejandro.notas[1] = 12;
    alejandro.notas[2] = 40;

    mia.nombre = "Mia";
    mia.notas[0] = 40;
    mia.notas[1] = 30;
    mia.notas[2] = 47;

    Estudiante *pJuan = &juan;
    Estudiante *pAlejandro = &alejandro;
    Estudiante *pMia = &mia;

    cout << "Notas de los estudiantes:" << endl;

    // Mostrar notas de Juan
    cout << pJuan->nombre << ": ";
    for (int i = 0; i < 3; ++i) {
        cout << pJuan->notas[i] << " ";
    }
    cout << endl;

    // Mostrar notas de Alejandro
    cout << pAlejandro->nombre << ": ";
    for (int i = 0; i < 3; ++i) {
        cout << pAlejandro->notas[i] << " ";
    }
    cout << endl;

    // Mostrar notas de Mia
    cout << pMia->nombre << ": ";
    for (int i = 0; i < 3; ++i) {
        cout << pMia->notas[i] << " ";
    }
    cout << endl;

    return 0;
}

